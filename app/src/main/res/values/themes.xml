<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Logisticsassistant" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>

        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:fontFamily">@font/stolzl_regular</item>
    </style>

    <style name="Stolzl" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/stolzl_regular</item>
    </style>

    <style name="tab_text" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/stolzl_regular</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="StatisticsDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@drawable/background_rounded_corners</item>
        <item name="android:windowMinWidthMajor">50%</item>
        <item name="android:windowMinWidthMinor">50%</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Theme.Logisticsassistant" parent="Base.Theme.Logisticsassistant" />
</resources>