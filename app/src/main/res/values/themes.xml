<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Logisticsassistant" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>

        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:fontFamily">@font/stolzl_regular</item>
    </style>

    <style name="Stolzl" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/stolzl_regular</item>
    </style>

    <style name="Theme.Logisticsassistant" parent="Base.Theme.Logisticsassistant" />
</resources>