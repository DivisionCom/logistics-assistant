<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_tasks">

    <fragment
        android:id="@+id/navigation_tasks"
        android:name="com.example.logistics_assistant.ui.main.tasks.TasksFragment"
        android:label="@string/title_tasks"
        tools:layout="@layout/fragment_tasks">
        <action
            android:id="@+id/action_navigation_tasks_to_taskDetailFragment"
            app:destination="@id/taskDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_graphs"
        android:name="com.example.logistics_assistant.ui.main.graphs.GraphsFragment"
        android:label="@string/title_graphs"
        tools:layout="@layout/fragment_graphs" />

    <fragment
        android:id="@+id/navigation_chat"
        android:name="com.example.logistics_assistant.ui.main.chat.ChatFragment"
        android:label="@string/title_chat"
        tools:layout="@layout/fragment_chat" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.logistics_assistant.ui.main.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/taskDetailFragment"
        android:name="com.example.logistics_assistant.ui.main.tasks.TaskDetailFragment"
        android:label="@string/title_detail"
        tools:layout="@layout/fragment_task_detail">
        <argument
            android:name="taskId"
            app:argType="integer" />
        <argument
            android:name="taskStatus"
            app:argType="string" />
    </fragment>
</navigation>